#!/usr/bin/env bash

# Load modules
module purge
module load tools/matlab system/matlab-proxy

# Set working directory to home directory or a specified path
cd "${HOME}"

# start server
env MWI_APP_PORT="$port" \
    MWI_APP_HOST="0.0.0.0" \
    MWI_ENABLE_TOKEN_AUTH="True" \
    MWI_AUTH_TOKEN="$password" \
    matlab-proxy-app

# Optionally, set the MATLAB license file if required
# export MATLAB_LICENSE_FILE=/path/to/license.lic
